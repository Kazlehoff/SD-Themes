 {
 	"id": "2a1f1a0b-c9bf-41a4-9950-f101ff2fe839",
 	"name": "Custom Loader",
 	"author": "Midnight",
 	"target": "Other",
 	"version": "v1.0",
 	"description": "Loads a custom loading screen. 3 Presets are included along with the ability to set and modify your own. GIFs are supported. Currently image location only works well with smaller GIFs (240px x 240px) on the local Steam Deck screen (I am working on a fix for this). Example folder included. Examples are to be used with black background.",
 	"manifest_version": 5,
 	"inject": {},
 	"dependencies": {},
 	"patches": {
 		"Choose Loader": {
 			"type": "dropdown",
 			"default": "Loading Buddy",
 			"values": {
 				"Loading Buddy": {
 					"css/loadingbuddy.css": [
 						"SP"
 					]
 				},
 				"Labs": {
 					"css/labs.css": [
 						"SP"
 					]
 				},
 				"Cat": {
 					"css/cat.css": [
 						"SP"
 					]
 				},
 				"Custom": {
 					"css/custom.css": [
 						"SP"
 					]
 				}
 			},
 			"components": [{
 					"name": "Custom Image",
 					"type": "image-picker",
 					"on": "Custom",
 					"default": "Custom Loader/images/loadingbuddy.gif",
 					"css_variable": "loader-image",
 					"tabs": [
 						"SP"
 					]
 				},
 				{
 					"name": "Background Color",
 					"type": "color-picker",
 					"on": "Custom",
 					"default": "#000000",
 					"css_variable": "loader-color",
 					"tabs": [
 						"SP"
 					]
 				}
 			]
 		},
 		"Custom Image Scale": {
 			"type": "slider",
 			"default": "0",
 			"values": {
 				"-3": {
 					"--loader-scale": [
       "scale(0.25)"
 						"SP"
 					]
 				},
 				"-2": {
 					"--loader-scale": [
       "scale(0.50)"
 						"SP"
 					]
 				},
 				"-1": {
 					"--loader-scale": [
       "scale(0.75)"
 						"SP"
 					]
 				},
 				"0": {
 					"--loader-scale": [
       "scale(1)"
 						"SP"
 					]
 				},
 				"1": {
 					"--loader-scale": [
       "scale(1.25)"
 						"SP"
 					]
 				},
 				"2": {
 					"--loader-scale": [
       "scale(1.5)"
 						"SP"
 					]
 				},
 				"3": {
 					"--loader-scale": [
       "scale(1.75)"
 						"SP"
 					]
 				}
 			},
 			"components": []
 		},
 		"Custom Image Location For Small GIFs": {
 			"type": "dropdown",
 			"default": "Center",
 			"values": {
 				"Center": {
 							"--loader-position": [
         "(center)"
 						"SP"
 					]
 				},
 				"Top Left": {
 					"--loader-position": [
       "(-160% -60%)"
 						"SP"
 					]
 				},
 				"Top Right": {
 					"--loader-position": [
       "(260% -60%)"
 						"SP"
 					]
 				},
 				"Bottom Left": {
 					"--loader-position": [
       "(-160% 150%)"
 						"SP"
 					]
 				},
 				"Bottom Right": {
 					"--loader-position": [
       "(260% 150%)"
 						"SP"
 					]
 				}
 			},
 			"components": []
 		}

 	}
 }
